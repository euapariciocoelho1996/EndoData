# Dockerfile para desenvolvimento
FROM node:20-alpine

WORKDIR /app

# Copiar arquivos de dependências
COPY package.json package-lock.json ./

# Instalar dependências
RUN npm ci

# Copiar código fonte
COPY . .

# Expor porta do Vite (padrão 5173)
EXPOSE 5173

# Comando para desenvolvimento
CMD ["npm", "run", "dev"]

